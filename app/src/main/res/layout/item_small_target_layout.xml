<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:background="@color/colorMain"></ImageView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_toEndOf="@+id/iv_icon"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:text="每周看电影"
        android:textColor="@color/colorText222"
        android:textSize="@dimen/text_size_18sp"></TextView>

    <TextView
        android:layout_below="@+id/tv_name"
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_toEndOf="@+id/iv_icon"
        android:paddingStart="12dp"
        android:text="已经完成目标3天"
        android:textColor="@color/colorText666"
        android:textSize="@dimen/text_size_10sp"></TextView>

    <ImageView
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorMain"
        android:id="@+id/iv_to_detail"
        android:layout_width="24dp"
        android:layout_height="24dp">
    </ImageView>
</RelativeLayout>